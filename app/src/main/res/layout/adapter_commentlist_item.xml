<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/coners"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_7">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/commentlist_iconhead"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_16"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来日可期"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_toRightOf="@id/commentlist_iconhead"
            android:id="@+id/commentlist_text_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****-**-**"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:id="@+id/commentlist_text_time"/>
        <TextView
            android:layout_width="@dimen/dp_292"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="****-**-**"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_below="@id/commentlist_iconhead"
            android:id="@+id/commentlist_text_artcile"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/dp_292"
            android:layout_height="@dimen/dp_292"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/commentlist_text_artcile"
            android:id="@+id/commentlist_icon_artcile"
            android:layout_marginBottom="@dimen/dp_10"/>
    </RelativeLayout>

</RelativeLayout>